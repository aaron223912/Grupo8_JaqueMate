                <% } %>
                <% if (category.id == 5) { %>
                    <% productsRandomYerbero.forEach(product => { %>
                        <article> <a href="/products/detalle/<%= product.id %>">
                            <div class="img_product">
                                <img src="/images/<%= product.images[0].file%>" alt="">
                            </div>
                            <div class="descrip">
                                <p class="product_name"><%= product.name %></p>
                                <p class="product_price"><%= product.price %></p>
                            </div>
                        </a>
                    </article>
                    <% }) %>
                <% } %>
            
        </section>

        <% }) %>


    </main>
    <footer class="home__footer">
        <%- include('./partials/footer') %> 
    </footer>
    <script src="javascripts/menuBurger.js"></script>
</body>

</html>